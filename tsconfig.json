{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
